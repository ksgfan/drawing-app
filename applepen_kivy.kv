<DrawingScreen>:
    name: "drawing"
    
    # start saving the data
    on_pre_enter: drawing.start_callback()

    # Add purple color
    canvas:
        Color:
            rgba: padding_color  # Purple
        Rectangle:
            pos: self.pos
            size: self.size

    padding: [30,30,30,30]

    GridLayout:
        cols: 1
        rows: 1
        padding: [30,30,30,30]

        GridLayout:
            #organise the window
            id: draw_screen
            cols: 1
            rows: 2
            size: root.width, root.height

            # change Layout to white
            canvas:
                Color:
                    rgba: 1, 1, 1, 1  # white
                RoundedRectangle:
                    pos: draw_screen.pos
                    size: draw_screen.size
                    radius: [(30, 30), (30, 30), (30, 30), (30, 30)]

            RelativeLayout:
                cols: 2
                rows: 1
                size_hint_y: 0.1
                MDRoundFlatIconButton: 
                    text: "Fertig"
                    icon: "check"
                    font_size: 50
                    #size_hint: 0.25, 0.05
                    pos_hint: finishbuttondrawingpos
                    on_press: 
                        drawing.save_image(drawing)
                        drawing.stop_callback()
                        app.stop_clock()
                    on_release:
                        app.switch_test_type()
                        drawing.canvas.clear()
                    
                MDRoundFlatIconButton: 
                    id: clear_button
                    text: "Löschen"
                    icon: "delete"
                    font_size: 50
                    #size_hint: 0.25, 0.05
                    pos_hint: clearbuttonpos
                    on_press: 
                        drawing.canvas.clear()
                        drawing.check_correction()

            FloatLayout:
                size_hint_y: 0.9
                Image:
                    id: viewImage

                CustLabel:
                    id: instructions
                    font_size: default_font_size
                    text_size: root.width - 100, None
                    color: 0, 0, 0, 1
                    size_hint: 1, 0.1
                    pos_hint: {'x': 0, 'y': 0.1}
                    halign: 'center'
                    valign: 'middle'
                    #markup: True

                DrawInput:
                    id: drawing
                    

